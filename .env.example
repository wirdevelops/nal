# Environment variables
NODE_ENV="development" # or "production" for prod

# Database
DATABASE_URL="your-database-url"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret" # Generate with: openssl rand -base64 32

# OAuth (if using)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Supabase
NEXT_PUBLIC_SUPABASE_URL="your-supabase-url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Cloudflare R2
CLOUDFLARE_ACCOUNT_ID="your-account-id" # From Cloudflare Dashboard URL
CLOUDFLARE_ACCESS_KEY_ID="your-access-key-id" # From R2 API Tokens
CLOUDFLARE_SECRET_ACCESS_KEY="your-secret-access-key" # From R2 API Tokens
R2_BUCKET_NAME="nalevel-staging" # or nalevel-prod for production

# Vercel (only needed for CI/CD)
VERCEL_TOKEN="your-vercel-token"
VERCEL_ORG_ID="your-vercel-org-id"
VERCEL_PROJECT_ID="your-vercel-project-id"
